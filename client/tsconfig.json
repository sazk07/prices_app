{
  "extends": "../configs/tsbase",
  "references": [
    {
      "path": "../shared"
    }
  ],
  "compilerOptions": {
    "paths": {
      "@dataTypes/*": [
        "../shared/src/types/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "module": "preserve",
    "lib": [
      "es2023",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
